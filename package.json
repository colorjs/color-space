{
  "name": "color-space",
  "description": "Collection of color space conversions",
  "version": "2.1.0",
  "author": "Dmitry Ivanov <df.creative@gmail.com>",
  "type": "module",
  "types": "./dist/index.d.ts",
  "keywords": [
    "color",
    "colour",
    "rgb",
    "hsl",
    "hsv",
    "lab",
    "lch",
    "luv",
    "lch",
    "cie",
    "hsluv",
    "husl",
    "color-convert",
    "gamut",
    "color-conversions",
    "color-space",
    "color-translation",
    "color-data",
    "coloroid",
    "cubehelix",
    "munsell",
    "hcg",
    "hsp"
  ],
  "repository": {
    "type": "git",
    "url": "http://github.com/colorjs/color-space.git"
  },
  "files": [
    "*.js",
    "dist"
  ],
  "license": "MIT",
  "main": "./index.js",
  "devDependencies": {
    "almost-equal": "^1.1.0",
    "pg-gateway": "^0.3.0-beta.4",
    "rollup": "^2.66.0",
    "terser": "^5.10.0",
    "typescript": "^5.7.2",
    "uvu": "^0.5.3"
  },
  "scripts": {
    "test": "npm run typecheck && node test",
    "build": "rollup ./index.js --file dist/color-space.js --format esm && tsc",
    "minify": "terser ./dist/color-space.js -o ./dist/color-space.min.js --module -c passes=3 -m",
    "prepublishOnly": "npm run build && npm run minify",
    "typecheck": "tsc --noEmit"
  }
}
